{% extends 'base.html.twig' %}

{% block title %}DÃ©pot annonce - {{ parent() }}{% endblock %}

 
{% block stylesheets %}
    	{{ encore_entry_link_tags('page_product') }}
{% endblock %}

{% block body %}
<div class="container justify-content-center col-sm-3 col-md-8 col-lg-6  mt-3">
    <div class ="  text-center">
        <h1 >Donner un objet</h1>
        {# <img class="form-img" src ="{{ asset('build/images/donObjet.png')}}"> #}
    </div>
    <section class= "d-flex flex-column align-items-center form-product mb-5" >
            {{ form_start (form, {
                'attr': {'novalidate':'validate'},
                'method':'POST',
            })
            }}
                <div class="row mt-3">
                    <div class = "col">
                        {{ form_row( form.name ) }}        
                    </div>
                </div>
                <div class="row mt-3">
                    <div class = "col">
                        {{ form_row( form.category ) }}        
                    </div>
                </div>
                <div class="row mt-3">
                    <div class = "col">
                        {{ form_row( form.state ) }}        
                    </div>
                </div>
                <div class="row mt-3">
                    <div class = "col">
                        {{ form_row( form.picture ) }}        
                    </div>
                </div>
                <div class="row mt-3">
                    <div class = "col">
                        {{ form_row( form.description ) }}        
                    </div>
                </div>
                <div class="row mt-3">
                    <div class = "col">
                        {{ form_row( form.city ) }}        
                    </div>
                </div>
                <div class="row mt-3">
                    <div class = "col">
                        {{ form_row( form.zipcode ) }}        
                    </div>
                </div>
                <div class="row mt-3">
                    <div class = "col">
                        {{ form_row( form.user ) }}        
                    </div>
                </div>
                <div class="row mt-3">
                    <div class = "col">
                        {{ form_row( form.visible ) }}        
                    </div>
                </div>
                <div class="row mt-3">
                    <div class = "col">
                        {{ form_row( form.createdAt ) }}        
                    </div>
                </div>
                
                <div class="row mt-3 mb-3 justify-content-center">
                    <button class=" col-4 col-sm-6 col-xs-12 btn btn-secondary text-center">Enrgistrer</button>
                </div>
            {{ form_end (form) }}
    </section> 
  <hr class= "hr-form">    
</div>

{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('page_product') }}
{% endblock %}