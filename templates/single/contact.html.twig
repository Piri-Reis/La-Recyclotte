{% extends 'base.html.twig' %}

{% block title%}
    Nous Contacter
{% endblock %}

{% form_theme our_form 'bootstrap_4_layout.html.twig'%}

{% block body %}

    <h1 class="text-center my-3 title-form">Contactez-nous</h1>

    <div class="d-flex col-lg-4 col-sm-6 mx-auto justify-content-center">

        <div class="container mb-5 form-control">

            {{form_start (our_form)}}

            <div class="my-3 label-color">
                {{form_row (our_form.name)}}
            </div>

            <div class=" my-3 label-color">
                {{form_row (our_form.phone)}}
            </div>

            <div class="my-3 label-color">
                {{form_row (our_form.email)}}
            </div>

            <div class="mb-4 label-color">
                {{form_row (our_form.message)}}
            </div>



            <div class="row d-flex justify-content-center">
                <button class="btn btn-action col-6 mb-3 p-0" type="submit">Envoyer</button>
            </div>
            {{form_end (our_form)}}

        </div>
    </div>
{% endblock %}