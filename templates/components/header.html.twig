<header>
	<div class="container">

		<nav class="navbar navbar-expand-lg navbar-light">
			<div
				class="container-fluid">
				{# logo #}
				<a class="navbar-brand " href="{{path('main_home')}}">
					<img src="{{asset('build/images/logo.png')}}" width="230" alt="logo de la recyclotte">
				</a>

				{# toggle #}
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				{# menu #}
				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav mx-auto mb-2 mb-lg-0 color-link">
						<li class="nav-item">
							<a class="nav-link active" aria-current="page" href="{{path('product_list')}}">Liste des objets</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{path('product_create')}}">Donner un objet</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{path('concept')}}">Le Concept</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{path('contact')}}">Contact</a>
						</li>
					</ul>

					{# login user #}
					{% if app.user %}
						<div class="d-flex">
							<span class="d-flex align-items-center me-2 label-color"> Bonjour {{ app.user.username }}</span>
							<a href="{{ path('user_logout') }}" class="btn btn-primary text-btn-nav btn-nav mx-2 px-2">Déconnexion</a>
						{% else %}
							<a href="{{ path('user_register') }}" class="btn btn-secondary text-btn-nav btn-nav px-2">Inscription</a>
							<a href="{{ path('user_login') }}" class="btn btn-primary text-btn-nav btn-nav mx-2 px-2">Connexion</a>
						{% endif %}
					</div>

				</div>
			</div>
		</nav>
	</div>

	{# formulaire de recherche global#}
	<div class="d-flex justify-content-center align-items-center pt-3 form-bg responsive">
		<div class="col-sm-6 ">
			<form method="get" action="{{path('product_list')}}" class="input-group mb-3">
				<input class="form-control col-sm-6" name="q" type="search" placeholder="ex : Fauteuil" aria-label="Search" value="{{ query ?? "" }}">
				<button class="btn btn-action text-btn-nav btn-search" type="submit">Rechercher</button>
			</form>
		</div>

		<div class="d-flex justify-content-center align-items-center ">
			<i class="fas fa-map-marker-alt"></i>
			<p class="text-white">Métropole Lilloise</p>
		</div>

	</div>

</header>
