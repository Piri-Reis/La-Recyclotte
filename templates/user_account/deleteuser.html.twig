{% extends 'base.html.twig' %}

{% block title %}Suppression de compte{{ parent() }}{% endblock %}

{% block stylesheets %}
    	{{ encore_entry_link_tags('page_profile') }}
{% endblock %}


    {% block body %}
    <div class="container py-5">
        <div class="row h-100 justify-content-center">
            <div class="container py-5">
                <div class="row h-100 justify-content-center">
                    <aside class="col-12 col-md-3">
                        <nav class="navbar navbar-expand navbar-light bg-white flex-md-column flex-row align-items-start border rounded">
                            <div class="collapse navbar-collapse">
                                <ul class="flex-md-column flex-row navbar-nav w-100 justify-content-between">
                                    <li class="nav-item">
                                        <a class="nav-link pl-0" href="{{ path('user_account_profile')}}">Mon profil</a>
                                    </li>
                
                                    <li class="nav-item">
                                        <a class="nav-link pl-0" href="{{ path('user_account_myproducts')}}">Mes annonces</a>
                                    </li>
                                            
                                </ul>
                            </div>
                        </nav>
                    </aside>

                
                <main class="col-6 border rounded bg-white">
                    <div class="container">
            
               
                        <div class="modal-dialog">
                            
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h3 class="modal-title" id="myModalLabel">Êtes-vous sûr(e)?</h3>
                                </div>
                                
                                <div class="modal-body">
                                    <p>Voulez-vous vraiment supprimer votre compte?</p>
                                </div>

                                <div class="modal-footer">
                                    <button class="btn" data-dismiss="modal">
                                        <a href="{{ path('user_account_profile')}}">Retour</a> 
                                    </button>
                                    <button type="button" class="btn btn-secondary">
                                        <a href="{{ path('user_account_deleteuser', { 'id': app.user.id }) }}">Confirmer</a>
                                    </button>
                                </div>
                        
                    </div>

                </main>
                </div>

            </div>
        </div>
    </div>
        
    <hr>
    {% endblock %}


{% block javascripts %}
    {{ encore_entry_script_tags('page_profile') }}
{% endblock %}