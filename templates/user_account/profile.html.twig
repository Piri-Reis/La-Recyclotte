{% extends 'base.html.twig' %}
   
{% block title %}Mon compte - {{ parent() }}{% endblock %}

{% block stylesheets %}
    	{{ encore_entry_link_tags('page_profile') }}
{% endblock %}

   {% block body %}
  <div class="bg-light">

    <h2 class="text-center title-form">Mon compte</h2>
      
    <div class="container py-5">
      <div class="row h-100 justify-content-center">
          <aside class="col-12 col-md-3">
            <nav class="navbar navbar-expand navbar-light bg-white flex-md-column flex-row align-items-start border rounded">
              <div class="collapse navbar-collapse">
                <ul class="flex-md-column flex-row navbar-nav w-100 justify-content-between">
                    <li class="nav-item">
                        <a class="nav-link pl-0" href="{{ path('user_account_profile')}}">Mon profil</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link pl-0" href="{{ path('user_account_myproducts')}}">Mes annonces</a>
                    </li>
                            
                </ul>
              </div>
            </nav>
          </aside>


          <main class="col-6 border rounded bg-white">
            <div class="container">

              {% for message in app.flashes('message') %}
                <div class="col-xs4">
                  <div class="alert alert-success" role="alert">{{message}}</div>
                </div>
              {% endfor %}                    
              

                <div class="py-5">
                  <div class="row">
                      <div class="col-6">
                        <img src="https://cdn.ter.sncf.com/medias/Images/centre_val_de_loire/%28image%20article%29%20objet%20perdu_tcm56-13042_tcm56-182410_272x194.png" alt="..." class="rounded-circle">
                      </div>

                      <div class="col-6 d-flex align-items-center justify-content-center"><h3>{{ app.user.username }}</h3></div>                 

                  </div>

                  <hr>

                  <div>
                    
                      <div class="row">                        
                          <h4 class="col-6"><strong>A propos de moi</strong></h4>
                      </div>      
    
                      <div class="row"> 
                        <div class="col-6">Nom : </div>                        
                        <div class="col-1">{{ app.user.lastname }}</div>
                      </div>                      
    
                      <div class="row">
                        <div class="col-6">Pr√©nom : </div>                    
                        <div class="col-1">{{ app.user.firstname }}</div>
                      </div>                    
    
                      <div class="row">
                        <div class="col-6">E- mail : </div>                        
                        <div class="col-6">{{ app.user.email }}</div>
                      </div>
                    </div>

                  </div>

                  <br>

                  <div>
                    
                    <div class="row">                        
                        <h4 class="col-6"><strong>informations sur le compte</strong></h4>
                    </div>
                    
                    Date d'inscription :
  
                  </div>

                  <br>

                      
                    <div class="d-flex justify-content-end">
                        <a href="{{ path('user_account_editprofile')}}" class="btn btn-action mb-3 p-1">Modifier</a>                       
                    </div>

                    <div class="d-flex justify-content-end">
                      <a href="{{ path('user_account_deleteuserPage') }}" class="btn btn-action mb-3 p-1">Supprimer mon compte</a>                       
                    </div>

                  <br>
                  
            </div>        

            
          </main>

      </div>
    </div>
  </div>

    {% endblock %}



{% block javascripts %}
    {{ encore_entry_script_tags('page_profile') }}
{% endblock %}