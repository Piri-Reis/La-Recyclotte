{% extends 'base.html.twig' %}
   
{% block title %}Modification du profil de {{ app.user.firstname }} {{ app.user.lastname }}{{ parent() }}{% endblock %}

{% block stylesheets %}
    	{{ encore_entry_link_tags('page_profile') }}
{% endblock %}

   {% block body %}

   <div class="container-fluid h-100">
    <div class="row h-100">
      <aside class="col-12 col-md-2 p-0">
        <nav class="navbar navbar-expand navbar-light bg-light flex-md-column flex-row align-items-start">
          <div class="collapse navbar-collapse">
            <ul class="flex-md-column flex-row navbar-nav w-100 justify-content-between">
                <li class="nav-item">
                    <a class="nav-link pl-0" href="{{ path('user_account_profile')}}">Mon profil</a>
                </li>
                
                <li class="nav-item">
                    <a class="nav-link pl-0" href="#">Mes messages</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link pl-0" href="#">Mes annonces</a>
                </li>
                        
            </ul>
          </div>
        </nav>
      </aside>
      
    <main class="col">
      <h2 class="text-center my-3 title-form">Modifier vos informations personnelles</h2>

      <div class="col-lg-4 mx-auto justify-content-center">
    
        <div class="container mb-5 form-control">
      
            {{form_start (form)}}
      
            <div class="my-3 label-color">
              {{form_row (form.firstname)}}
            </div>
      
            <div class="my-3 label-color">
              {{form_row (form.lastname)}}
            </div>
      
            <div class="my-3 label-color">
              {{form_row (form.username)}}
            </div>
      
            <div class="mb-4 label-color">
              {{form_row (form.email)}}
            </div>

        </div>
    
    
          <div class="d-flex justify-content-center">
          <button class="btn btn-action col-6 mb-3 p-0" type="submit">Valider</button>
          </div>
          {{form_end (form)}}
    </main>
            

    {% endblock %}



{% block javascripts %}
    {{ encore_entry_script_tags('page_profile') }}
{% endblock %}