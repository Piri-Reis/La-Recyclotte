{% extends 'base.html.twig' %}
   
{% block title %}Modification du profil de {{ app.user.firstname }} {{ app.user.lastname }}{{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('page_product-display') }}
    {{ encore_entry_link_tags('page_profile') }}
{% endblock %}

{% block body %}
<section class="profile">
     <div class="container py-5">
         <h1 class="text-center">Mon compte</h1>
         <div class="row d-flex justify-content-center py-5">

            <div class="col-md-3 mb-4">
                <div class="min-nav">
                    {# Start Nav #}
                    {% include "components/profil-nav.html.twig" %}
                    {# End Nav #}
                </div>
            </div>

            <div class="col-md-7">
    
                <div class="container form-control">

                    <h3 class="mt-3 mb-5">Modifier mes informations de profil</h3>
              
                    {{form_start (form)}}
              
                    <div class="my-3 label-color">
                      {{form_row (form.firstname)}}
                    </div>
              
                    <div class="my-3 label-color">
                      {{form_row (form.lastname)}}
                    </div>
              
                    <div class="my-3 label-color">
                      {{form_row (form.username)}}
                    </div>
              
                    <div class="mb-4 label-color">
                      {{form_row (form.email)}}
                    </div>
                    
                    <div class="d-flex justify-content-center">
                        <button class="btn btn-action" type="submit">Enregistrer</button>
                    </div>

                    {{form_end (form)}}
                </div>

            </div>

        </div>
    </div>
</section>
   
{% endblock %}



{% block javascripts %}
    {{ encore_entry_script_tags('page_product-display') }}
    {{ encore_entry_script_tags('page_profile') }}
{% endblock %}