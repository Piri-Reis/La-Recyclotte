{% extends 'base.html.twig' %}
   
{% block title %}Mes annonces - {{ parent() }}{% endblock %}

{% block stylesheets %}
    	{{ encore_entry_link_tags('page_myproducts') }}
{% endblock %}

   {% block body %}
   <div class="bg-light">

  <h2 class="text-center title-form">Mes annonces</h2>


  <div class="container py-5">
    <div class="row h-100 justify-content-center">
        <aside class="col-12 col-md-3">
          <nav class="navbar navbar-expand navbar-light bg-white flex-md-column flex-row align-items-start border rounded">
            <div class="collapse navbar-collapse">
              <ul class="flex-md-column flex-row navbar-nav w-100 justify-content-between">
                  <li class="nav-item">
                      <a class="nav-link pl-0" href="{{ path('user_account_profile')}}">Mon profil</a>
                  </li>

                  <li class="nav-item">
                      <a class="nav-link pl-0" href="{{ path('user_account_myproducts')}}">Mes annonces</a>
                  </li>
                          
              </ul>
            </div>
          </nav>
        </aside>


      <main class="col-6 ">

        <div class="container">
          {% for message in app.flashes('message') %}
            <div class="col-xs4">
              <div class="alert alert-success" role="alert">{{message}}</div>
            </div>
          {% endfor %}

            <div class="row">

              {% for product in app.user.products %}
              <div class="card mb-3">
                <div class="row ">

                  <div class="col-md-5">
                      <img src="{{ asset ('uploads/' ~ product.picture ) }}" class="card-img-top" alt="{{product.title}}" class="card-img">
                  </div>

                  <div class="col-md-7 ">
                      <div class="card-body">
                        <h5 class="card-title">{{ product.title}}</h5>
                        <p class="card-text"></p>
                        <div class="card-text"><i class="fas fa-map-marker-alt orange"></i> 
                          {{product.city}} ({{ product.zipcode.code}})</div>

                        
                        <p class=" blue bold">{{ product.state.name }}</p>   
                        
                      </div>

                      <p class="card-text grey bold">Posté le {{ product.createdAt|date("j M Y \à G:i") }}</p>               

                  </div>

                </div>
              </div>
                
              <div class="d-flex justify-content-end">
                <a href="{{ path('user_account_editprofile')}}" class="btn btn-action mb-3 p-1">Modifier</a>                       
              </div>              
              
              </div>

              <hr>
                  
              {% endfor %}
            </div>

            <br>

        </div>
      </main>
    </div>
  </div>
</div>
    {% endblock %}



{% block javascripts %}
    {{ encore_entry_script_tags('page_myproducts') }}
{% endblock %}