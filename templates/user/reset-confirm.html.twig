{% extends 'base.html.twig' %}

{% block title%}
	Mot de passe oublié
{% endblock %}

{% form_theme form 'bootstrap_4_layout.html.twig'%}

{% block body %}

	<h1 class="text-center my-3 title-form">Réinitialisation du mot de passe</h1>

	<div class="d-flex col-lg-4 col-sm-6 mx-auto justify-content-center">

		<div class="container mb-5 form-control">

			{{form_start (form)}}

			<div class="my-3 label-color">
				{{form_row (form.plainPassword.first)}}
			</div>

			<div class=" my-3 label-color">
				{{form_row (form.plainPassword.second)}}
			</div>

			<div class="row d-flex justify-content-center">
			<button class="btn btn-action col-6 mb-3 p-0" type="submit">Enregistrer</button>
			</div>
			{{form_end (form)}}

		</div>
	</div>
{% endblock %}
